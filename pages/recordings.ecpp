    } else {
      s.a += '<img src=\"img/transparent.png\" width=\"16px\" height=\"16px\" />'
<%cpp> if (LiveSetup().GetShowIMDb() ) { </%cpp>
      IMDBS(s, obj[0], obj[14])
<%cpp> } </%cpp>
    }
    s.a += '</div>'

        s.a += obj[4]
      } else s.a += 'img/transparent.png\" height=\"16px'
      if (obj[5].length != 0 || obj[8].length != 0) {
// scraper data available
        s.a += '\" title=\"'
        s.a += obj[5]
          if (obj[6].length != 0) {
            s.a += '<$$lf$>S'

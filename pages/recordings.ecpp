      addScraperImageTitle(s, obj[3], obj[4], obj[5], obj[6], obj[7], obj[8], '<$$lf$>');
    s.a += '</td>'
<%cpp> } </%cpp>
    s.a += '<td class="td-hidden-xs"><div class="hidden-xs recording_day margin-bottom">'

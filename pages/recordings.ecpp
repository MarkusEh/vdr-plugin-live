<%def action>
<%args>
  std::string id;
  std::string history_num_back;
</%args>
<%cpp>
  if (!cUser::CurrentUserHasRightTo(UR_DELRECS))
    throw HtmlError( tr("Sorry, no permission. Please contact your administrator!") );

  std::string recording_Name;
  {
    LOCK_RECORDINGS_READ;
    LOCK_DELETEDRECORDINGS_READ;
    const cRecording *recording = RecordingsManager::GetByHash(cSv(id).substr(4), Recordings, DeletedRecordings);
    if (recording == nullptr) {
      esyslog2("pages/recordings.action, couldn't find action/recording ", id);
      throw HtmlError(tr("Couldn't find recording or no recordings available"));
    }
    recording_Name = recording->Name();
  }

  cSv action_id = cSv(id).substr(0, 4);
  const char *headline;
  cToSvConcat confirmation_question;
  cToSvConcat warning;
  if (action_id == "del_") {
    headline = tr("Delete recording");
    confirmation_question.appendFormatted(tr("Delete recording \"%s\"?"), recording_Name.empty()?"[recording name unavailable]":recording_Name.c_str());
  } else if (action_id == "pur_") {
    headline = tr("Permanently delete recording");
    confirmation_question.appendFormatted(tr("Permanently delete recording \"%s\"?"), recording_Name.empty()?"[recording name unavailable]":recording_Name.c_str());
    warning.append(tr("Warning: This cannot be undone!"));
  } else {
    headline = tr("Restore recording");
    confirmation_question.appendFormatted(tr("Restore recording \"%s\"?"), recording_Name.empty()?"[recording name unavailable]":recording_Name.c_str());
  }
</%cpp>
<div class="epg_description" id="<$ id $>">
  <div class="station">
    <div class="boxheader"><div class="caption"><$ headline $></div></div>
  </div>
  <div class="epg_content">
    <form>
      <input type="hidden" name="history_num_back" value="<$ history_num_back $>" id="history_<$ id $>"\>
      <div class="about_head prompt"><p><$ confirmation_question $></p>
%       if (!warning.empty()) {
        <p><$ warning $></p>
%       }
      </div>
      <div class="about_section">
        <div class="tabular buttons">
          <div class="about_left">
            <button id="confirm_<$ id $>" class="green" type="button" onclick="action_back('<$ id $>', <$ history_num_back $>)"><$headline$></button>
          </div>
          <div class="about_right">
            <button id="close_<$ id $>" type="button" class="red" onclick="back_depending_referrer(1, <$history_num_back $>)"><$ tr("Cancel") $></button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
</%def>



<%def rec_tools>
<%args>
  std::string id;
  std::string title;
  std::string s_IMDB_ID;
  std::string sort;
  std::string filter;
  std::string flat;
  int history_num_back = 0;
</%args>
<%cpp>
cToSvConcat label = "";
constexpr auto breaksAtRight = "~";
bool deleted = false;
const RecordingsItemRec* recPtr = RecordingsManager::GetByIdHash(id, &deleted);
if (recPtr) {
  time_t startTime = recPtr->StartTime();
  label.appendDateTime(tr("%a,"), startTime );      // day of week
  label.concat(' ');
  label.appendDateTime(tr("%b %d %y"), startTime);  // date
  label.concat(", ");
  label.appendDateTime(tr("%I:%M %p"), startTime);  // time
  label.append(tr(" - ")).append(title);
}
if (!deleted) {
  if (cDevice::PrimaryDevice() && cDevice::PrimaryDevice()->HasDecoder() ) {
</%cpp>
<& pageelems.ajax_action_href action="play_recording" param=(id) tip=(tr("Play this recording")) label=(label) breaksAtRight=(breaksAtRight) image="play.png" alt="" className="icon" &>
%   }
<& pageelems.hls_recording recId=(id) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
<& pageelems.m3u_playlist_recording recid=(id) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
% }
<& pageelems.imdb_info_href title=(title) s_IMDB_ID=(s_IMDB_ID) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
% if (!deleted) {
<& recordings.edit_rec id=(id) sort=(sort) filter=(filter) flat=(flat) history_num_back=(history_num_back) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
<& recordings.del_rec id=(id) sort=(sort) filter=(filter) flat=(flat) history_num_back=(history_num_back) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
% } else {
<& recordings.res_rec id=(id) history_num_back=(history_num_back) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
<& recordings.pur_rec id=(id) history_num_back=(history_num_back) className="icon" label=(label) breaksAtRight=(breaksAtRight) &>
% }
<%cpp>
if (recPtr) {
  const char *sdhd = nullptr;
  cToSvConcat frameParams;
  StringAppendFrameParams(frameParams, recPtr);
  switch (recPtr->FrameWidth()) {
    case 720:
      sdhd = "720x576";
      break;
    case 1280:
      sdhd = "1280x720";
      break;
    case 1920:
      sdhd = "1920x1080";
      break;
    case 3840:
      sdhd = "3840x2160";
      break;
    default:
      break;
  }
  int video_SD_HD = recPtr->SD_HD();
  if (!sdhd) sdhd = video_SD_HD == 0 ? "sd": video_SD_HD == 1 ? "hd": "ud";
  cToSvConcat duration;
  AppendDuration(duration, tr("%d:%02d"), recPtr->Duration() );
</%cpp>
<div id="icons-<$id$>" class="recording_status"></div>
<script class="injectIcons">
injectErrorHdSdIcon(\"icons-<$id$>\", <$cToSvInt(recPtr->RecordingErrors())$>, <$cToSvInt(recPtr->DurationDeviation())$>, \"<$sdhd$>\", \"<$recPtr->ChannelName()$>\", \"<$duration$>\", <$ cToSvInt(recPtr->NumberTsFiles()) $>, \"<$frameParams$>\")
</script>
<%cpp>
}
</%cpp>
</%def>


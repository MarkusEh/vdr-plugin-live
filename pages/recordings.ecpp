      s.a += '\"/>'
      s.a += '</td>'
    }
// end if (!LiveSetup().GetTvscraperImageDir().empty() )
    s.a += '<td class="hidden-xs"><div class=\"recording_day\">'
    s.a += obj[9]
    s.a += '</div></td><td>'
    if (obj[10] > -100) {
      s.a += '<div class=\"recording_errors\"><img src=\"<$LiveSetup().GetThemedLinkPrefixImg()$>'
      if (obj[10] == 0) s.a += 'NoRecordingErrors.png'

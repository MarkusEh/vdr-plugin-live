<%def rec_tools>
<%args>
	std::string id;
	std::string title;
  std::string s_IMDB_ID;
</%args>
%   if (cDevice::PrimaryDevice() && cDevice::PrimaryDevice()->HasDecoder() ) {
<& pageelems.ajax_action_href action="play_recording" param=(id) tip=(tr("play this recording")) image="play.png" alt="" &>
%   }

    s.a += obj[13]
    s.a += '\"><a href=\"epginfo.html?epgid=recording_'
    s.a += obj[1]
    s.a += '\" class="apopup" title=\"'
    if (obj[16].length != 0) {
      s.a += obj[16]
      s.a += '<$$lf$>'
    }
    s.a += '<$tr("Click to view details.")$>'
    s.a += '\">'
    s.a += obj[14]
    if (displayFolder == 1 && obj[17].length != 0) {
      s.a += ' ('
      s.a += obj[17]
      s.a += ')'
    }
    s.a += '<br /><span>'
    s.a += obj[15]
    if (obj[15].length == 0) {
      if (obj[16].length == 0) s.a += '&nbsp;';
      else s.a += truncateOnWord(obj[16], 70);
    }
    s.a += '</span></a></div></td>'  // end if recording_name / short description
    s.a += '<td><div class=\"recording_actions\">'
    if (obj[2].length == 0) {
<%cpp> if (LiveSetup().GetUseStreamdev() ) { </%cpp>
      RecordingActionS(s, obj[1], "vdr_request/play_recording?param=", "play.png", "<$tr("play this recording")$>", argList)
<%cpp> } </%cpp>
      RecordingActionS(s, obj[1], "playlist.m3u?recid=", "playlist.png", "<$tr("Stream this recording into media player.")$>", argList)

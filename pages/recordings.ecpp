  s.a += Img
  s.a += '\" /></a>'
}

function IMDBS(s, im_db, name) {
  if (im_db.length == 0) {
    s.a += '<a href=\"http://www.imdb.com/find?s=all&q='
    s.a += name
  } else {
    s.a += '<a href=\"https://www.imdb.com/title/'

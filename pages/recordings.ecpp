    s.a += '</div></div></td>'  // end if recording_name / short description
    s.a += '<td><div class=\"recording_actions\">'
    if (obj[1].length == 0) {
%     if (cDevice::PrimaryDevice() && cDevice::PrimaryDevice()->HasDecoder() ) {
